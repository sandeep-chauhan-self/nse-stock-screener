# MANIFEST.in for NSE Stock Screener
# Include additional files in the Python package

# Include documentation
include README.md
include Requirements.md
include CHANGELOG.md
include LICENSE

# Include configuration files
include pyproject.toml
include requirements.txt
include .env.example

# Include Docker files
include Dockerfile
include docker-compose.yml
include .dockerignore

# Include static data files
recursive-include data *.txt
recursive-include data *.csv
recursive-include data *.json

# Include script templates
recursive-include scripts *.bat
recursive-include scripts *.ps1
recursive-include scripts *.py
recursive-include scripts *.sh

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt

# Include GitHub Actions workflows
recursive-include .github *.yml
recursive-include .github *.yaml

# Include quality assurance configs
include .ruff.toml
include mypy.ini
include .bandit.yml
include .pre-commit-config.yaml

# Exclude unwanted files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .pytest_cache
global-exclude .coverage
global-exclude htmlcov
global-exclude .mypy_cache
global-exclude .ruff_cache

# Exclude test outputs and temporary files
global-exclude output/*
global-exclude test-output/*
global-exclude *.log
global-exclude *.tmp
global-exclude .DS_Store
global-exclude Thumbs.db